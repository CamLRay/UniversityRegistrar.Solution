@{
  Layout = "_Layout";
}

@model Registrar.Models.Department


<h2>Department Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if(@Model.Courses.Count == 0)
{
  <p>This Department does not contain any courses yet!</p>

}
else
{
  <h3>Courses in this department</h3>

  @foreach(var course in Model.Courses)
  {
    <li>@Html.ActionLink($"{course.Name}", "Details", "Courses", new { id = course.CourseId})</li>
  }
}

@if(@Model.Students.Count == 0)
  {
    <h4>This Department does not contain any students yet!</h4>
  }
  else
  {
    <h4>Students in this Department</h4>
      @foreach (var student in Model.Students)
      {
      <li>@Html.ActionLink($"{student.Name}", "Details", "Students", new { id = student.StudentId })</li>
      }
  }


