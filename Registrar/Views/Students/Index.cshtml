@{
  Layout = "_Layout";
}

@using Registrar.Models;
@model List<Registrar.Models.Student>;

<h1>Students Portal</h1>

@if (@Model.Count == 0)
{
  <h3>No Students have been added yet!</h3>
}

<div class="spacing" style="
  height: 20px;"></div>

<section class="student-list">

  @foreach (Student student in Model)
  {
    @* <div class="student-list-item"> *@
      <li>@Html.ActionLink($"{student.Name}", "Details", new { id = student.StudentId }, new {@Class = "student-list-item" })</li>
    @* </div> *@
  }
  
</section>

<p>@Html.ActionLink("Add new Student", "Create")</p>

<br>

<p>@Html.ActionLink("Go Home", "Index", "Home")</p>