@{
  Layout = "_Layout";
}

@using Registrar.Models;

<h1>Courses</h1>

@if (@Model.Count == 0)
{
  <h3>No courses have been added yet!</h3>
} 

<section class="student-list">
  @foreach(Course course in Model)
  {
    <li>@Html.ActionLink($"{course.Name} {course.CourseNum}", "Details", new { id = course.CourseId }, new {@Class = "student-list-item" })</li>
  }
</section>

<p>@Html.ActionLink("Add new course", "Create", null, null, new { @Class = "btn btn-primary"})</p>